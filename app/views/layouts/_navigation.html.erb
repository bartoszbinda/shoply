<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to "Group blog", "/welcome/index", class: "btn btn-lg btn-success", id: "logo" %>
    <% if user_signed_in? %>
    <div class="nav_item">
      <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-default btn-warning" %>
    </div>
    <div class="nav_item">
      <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-default btn-warning" %>
    </div>
     
    <% if current_user.isAdmin %>
      <div class="nav_item">
        <%= link_to "Manager users", "#", class: "btn btn-default btn-warning" %>
      </div>
      <div class="nav_item">
        <%= link_to "Manage Posts", "#", class: "btn btn-default btn-warning" %>
      </div>
    <% end %>
    <% else %>

    <div class="nav_item">
      <%= link_to "Sign up", "/users/sign_up", class: "btn btn-default btn-warning" %>
    </div>
    <div class="nav_item">
      <%= link_to "Sign in", "/users/sign_in", class: "btn btn-default btn-warning" %>
    </div>
   
    <% end %>


  </div>



</header>