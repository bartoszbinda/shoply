<p>
  <strong>Commenter:</strong>
  <%= comment.commenter %>
</p>
 
<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>
<% if user_signed_in? && current_user.isAdmin %>
  <p>
     <%= link_to 'Destroy', [comment.article, comment],
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>