<div class='contrainer-fluid center'>
  <div class='articles-box'>
  <%= form_for :article, url: articles_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field(:title, size: 100 ) %>
    </p>
   
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text, cols: "200", rows: "20" %>
    </p>
   
    <p>
      <%= f.submit %>
    </p>
  <% end %>
  </div>
  <%= link_to 'Back', articles_path %>
</div>