<h1>Hi there!</h1>
<h1>Here are some newest posts!</h1>
<div class="container-fluid">
  <article class="post-box">
    
    <% @articles.each do |article| %>
    <% break if @counter == 3 %>
      <h1 class="center"><%= article.title %></h1>
      <p><%= article.text %></p>
      <br>
    <% @counter += 1 %>
    
    <% end %>
    
  </article>
</div>